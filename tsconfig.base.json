{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "components": ["packages/components/src/index.ts"],
      "engrafia": ["packages/engrafia/src/index.ts"],
      "playground": ["packages/playground/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
