{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/engrafia-plugin/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/engrafia-plugin/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/engrafia-plugin"
      ],
      "options": {
        "jestConfig": "packages/engrafia-plugin/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "format": [
          "esm"
        ],
        "outputPath": "dist/packages/engrafia-plugin",
        "tsConfig": "packages/engrafia-plugin/tsconfig.lib.json",
        "packageJson": "packages/engrafia-plugin/package.json",
        "main": "packages/engrafia-plugin/src/index.ts",
        "assets": [
          "packages/engrafia-plugin/*.md"
        ]
      }
    },
    "watch": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "watch": true,
        "format": [
          "esm"
        ],
        "outputPath": "dist/packages/engrafia-plugin",
        "tsConfig": "packages/engrafia-plugin/tsconfig.lib.json",
        "packageJson": "packages/engrafia-plugin/package.json",
        "main": "packages/engrafia-plugin/src/index.ts",
        "assets": [
          "packages/engrafia-plugin/*.md"
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "noVerify": true,
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]",
        "tagPrefix": "@engrafia/${projectName}@",
        "baseBranch": "main",
        "postTargets": [
          "use-root:deploy"
        ]
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}